<% 
  const baseClass = "px-4 py-2 rounded mb-4 text-sm rounded-lg"; 
%>

<% if (success && success.length > 0) { %>
  <div class="<%= baseClass %> bg-green-100 text-green-800">
    <%= success[0] %>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="<%= baseClass %> bg-red-100 text-red-800">
    <%= error[0] %>
  </div>
<% } %>
